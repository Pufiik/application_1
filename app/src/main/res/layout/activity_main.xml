<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="183dp"
        android:layout_height="66dp"
        android:background="#F4D26A"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="YOUR NAME"
        android:textSize="26dp"
        android:textColor="#51400A"
        android:theme="@style/TextAppearance.AppCompat.Inverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:text="Switch"
        android:gravity="center"
        android:textColor="#CDA326"
        android:textStyle="bold"
        android:shadowColor="#8C7450"
        android:shadowDx="-1"
        android:shadowDy="2"
        android:shadowRadius="0.01"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/btn_click" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="261dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="casual"
        android:text="CheckBox_1"
        android:textColor="#182F42"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="260dp"
        android:text="toogleButton_1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#C0B0DC"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <Button
        android:id="@+id/btn_click"
        android:layout_width="95dp"
        android:layout_height="57dp"
        android:background="@drawable/buttonyell"
        android:text="CLICK"
        android:textColor="#7C6112"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.524" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="245dp"
        android:layout_height="65dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/toggleButton_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>
